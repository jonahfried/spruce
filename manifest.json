{
    "manifest_version": 2,
    "name": "Spruce",
    "description": "Spruce is a powerful tool for exploring famous quotes related to your writing.",
    "version": "0.1",
    "permissions": [
        "storage",
        "activeTab",
        "declarativeContent",
        "webRequest",
        "contextMenus"
    ],
    "icons": {
        "16": "./icons/icon-16.png",
        "48": "./icons/icon-48.png",
        "128": "./icons/icon-128.png"
    },
    "browser_action": {
        "default_icon": "icons/icon-128.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://docs.google.com/document/*"
            ],
            "js": [
                "googleDocsUtil.js",
                "handleGoogleDoc.js"
            ]
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "exclude_matches": [
                "https://docs.google.com/document/*"
            ],
            "js": [
                "handleGeneric.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}